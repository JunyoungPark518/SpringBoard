<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.board.web.mapper.Mapper">
   <select id="getArticleList" resultType="com.board.web.domain.Article" parameterType="hashMap">
   <!-- SELECT * FROM Article -->
   SELECT *
	FROM (
	SELECT @NO := @NO + 1 AS ROWNUM, A.*
	FROM
	  (
	    SELECT *
	    FROM Article
	  ) A,
	  ( SELECT @NO := 0 ) B 
	  ORDER BY seq DESC
	) C
	WHERE C.ROWNUM BETWEEN 1 AND 5;
   <!-- SELECT t2.* 
			from (select @ROWNUM := @ROWNUM + 1 AS rownum, t.title, t.content, t.regdate, t.seq, t.readCount, t.id
				  from Article t, (SELECT @ROWNUM := 0) R ORDER BY t.regdate DESC) t2 
			where t2.rownum between #{startRow} and #{endRow} order by t2.rownum asc; -->
   </select>
</mapper>